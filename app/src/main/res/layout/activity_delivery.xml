<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.EdirneYag" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="vertical"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/txtDeliveryNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/LightGray"
                        android:layout_marginRight="5dp"
                        android:layout_weight="40"
                        android:padding="1dp"
                        android:text="@string/delivery"></Button>
                    <Button
                        android:id="@+id/btnStart"
                        android:background="@color/LightGray"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"                       android:layout_weight="30"
                        android:text="@string/start"></Button>
                    <Button
                        android:id="@+id/btnUndo"
                        android:layout_width="0dp"
                        android:background="@color/LightGray"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="30"
                        android:text="@string/undo"></Button>

                    <Button
                        android:id="@+id/btnFinish"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@color/LightGray"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        android:text="@string/finish"></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <WebView
                        android:id="@+id/webViewVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:layout_gravity="top"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/editBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/Red"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:hint="@string/barcode"
                        android:textAlignment="center"
                        android:inputType="text"
                        android:text=""></EditText>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/LightGray"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtMalAdiH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:text="Mal Adı">
                        </TextView>
                        <TextView
                            android:id="@+id/txtPaletMiktarH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="Miktar">
                        </TextView>
                        <TextView
                            android:id="@+id/txtYuklemeMiktarH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="Yük. Mik.">
                        </TextView>
                        <TextView
                            android:id="@+id/txtAddH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/process">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtMalAdi"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:text="">
                        </TextView>
                        <TextView
                            android:id="@+id/txtPaletMiktar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:text="">
                        </TextView>
                        <EditText
                            android:id="@+id/editSayim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:inputType="number"
                            android:text="">
                        </EditText>
                        <Button
                            android:id="@+id/btnUpdate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/add"></Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/real_horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:layout_weight="40"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/LightGray"
                        android:gravity="top">
                        <TextView
                            android:id="@+id/txtMalAdiLH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:text="Mal Adı">
                        </TextView>
                        <TextView
                            android:id="@+id/txtMiktarLH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:text="Miktar">
                        </TextView>
                        <TextView
                            android:id="@+id/txtYuklemeMiktarLH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:text="@string/delivery_quantity">
                        </TextView>
                    </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewDeliveryItemList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="1sp"
                            android:scrollbars="vertical"
                            android:fadeScrollbars="false"
                            app:reverseLayout="true"/>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:gravity="top">
                <SurfaceView
                    android:id="@+id/surfaceViewDelivery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="99"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtBarcodeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="No Barcode Detected"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />
                    <Switch
                        android:id="@+id/swCamera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Kamera On/Off"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:checked="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/nav_menu"
        tools:ignore="MissingClass" />

</androidx.drawerlayout.widget.DrawerLayout>